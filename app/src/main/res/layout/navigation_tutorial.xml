<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/disabled_background"
        android:clickable="true">

        <ImageView
            android:id="@+id/navigation_tutorial_balloon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/text_balloon_right_top" />

        <TextView
            fontPath="fonts/BMDOHYEON.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/navigation_tutorial_balloon"
            android:layout_alignTop="@id/navigation_tutorial_balloon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/navigation_tutorial_message"
            android:textColor="#373737"
            android:textSize="16sp" />

        <Button
            android:id="@+id/navigation_tutorial_next"
            fontPath="fonts/BMDOHYEON.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/navigation_tutorial_balloon"
            android:layout_alignEnd="@id/navigation_tutorial_balloon"
            android:background="@android:color/transparent"
            android:paddingBottom="15dp"
            android:text="@string/next"
            android:textColor="#82a2cf"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>