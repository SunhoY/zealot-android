<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        fontPath="fonts/BMDOHYEON.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_with_exclamation"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <io.harry.zealot.view.AjaePercentageView
        fontPath="fonts/BMDOHYEON.ttf"
        android:id="@+id/ajae_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        tools:text="94"
        android:textSize="48sp"
        android:textColor="@color/ajae_indicator_selector"
        android:shadowColor="#ffffff"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        />

    <io.harry.zealot.view.AjaeImageView
        android:id="@+id/result_image"
        android:layout_below="@id/ajae_score"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ajae_image_selector"
        android:layout_centerHorizontal="true"
        />

    <Button
        fontPath="fonts/BMDOHYEON.ttf"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/test_again"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/test_again"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="@color/blue"
        />

    <Button
        fontPath="fonts/BMDOHYEON.ttf"
        android:id="@+id/share_sns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_again"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/ico_share"
        android:text="@string/share"
        />

    <io.harry.zealot.view.AjaeMessageView
        android:id="@+id/result_message"
        fontPath="fonts/BMDOHYEON.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="빼박캔트\n진성아재"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/test_again"
        android:layout_centerHorizontal="true" />

</RelativeLayout>